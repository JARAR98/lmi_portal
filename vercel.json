{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.py",
      "use": "@vercel/python"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/terms",
      "dest": "/api/routes/terms.py"
    },
    {
      "src": "/privacy",
      "dest": "/api/routes/privacy.py"
    },
    {
      "src": "/admin/login",
      "dest": "/api/routes/admin_login.py"
    },
    {
      "src": "/admin",
      "dest": "/api/routes/admin_dashboard.py"
    },
    {
      "src": "/success",
      "dest": "/api/routes/success.py"
    },
    {
      "src": "/(.*)",
      "dest": "/api/routes/index.py"
    }
  ],
  "env": {
    "FLASK_ENV": "production",
    "ADMIN_USERNAME": "admin",
    "ADMIN_PASSWORD": "@LMIAdmin2025"
  }
}
